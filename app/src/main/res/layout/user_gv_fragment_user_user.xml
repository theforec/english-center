<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/wallet_hint_foreground_holo_light">

        <TextView
            android:id="@+id/text_view_back_to_chat_gv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableStart="@drawable/ic_back"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="@string/l1"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/layout_list_user_gv"
        android:layout_width="match_parent"
        android:layout_below="@+id/header5"
        android:layout_height="match_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp" />

</RelativeLayout>